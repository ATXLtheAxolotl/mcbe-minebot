{
    "compilerOptions": {
        "lib": [
            "ES2020"
        ],
        "module": "commonJS",
        "moduleResolution": "node",
        "target": "ES2020",
        "outDir": "build/",
        "sourceMap": false,
        "esModuleInterop": true,
        "experimentalDecorators": false,
        "emitDecoratorMetadata": false,
        "allowSyntheticDefaultImports": true,
        "skipLibCheck": true,
        "skipDefaultLibCheck": true,
        "declaration": false,
        "resolveJsonModule": true,
        "removeComments": true,
    },
    "include": [
        "src"
    ],
    "exclude": [
        "node_modules"
    ]
}